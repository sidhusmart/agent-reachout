# Telegram Configuration
# Get your bot token from @BotFather on Telegram
AGENT_REACHOUT_TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (you can get this from @userinfobot)
# For direct messages: your user ID (positive number)
# For groups: the group ID (negative number, e.g., -1001234567890)
AGENT_REACHOUT_TELEGRAM_CHAT_ID=your_chat_id_here

# (Optional) Topic ID for group forum topics
# If set, messages will only be sent to and received from this specific topic
# Get this from the topic link: https://t.me/c/1234567890/42 â†’ topic ID is 42
AGENT_REACHOUT_TELEGRAM_TOPIC_ID=

# Default timeout for waiting for user responses (5 minutes)
AGENT_REACHOUT_NOTIFY_DEFAULT_TIMEOUT_MS=300000
